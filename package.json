{
  "scripts": {
    "sass:watch": "chokidar '**/*.scss' -c 'npm run sass:build' --initial",
    "sass:build": "sass main.scss main.css",
    "serve": "browser-sync start -s -f '*.html' '*.css'",
    "start": "npm-run-all -p sass:watch serve",
    "build": "npm run sass:build"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.23.0"
  },
  "private": true
}
